{
  "name": "svelte-companion",
  "displayName": "Svelte companion",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:svelte-companion.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "svelte-companion.refreshLayoutTree",
        "title": "Refresh layout tree",
        "icon": "$(refresh)"
      },
      {
        "command": "svelte-companion.addCode",
        "title": "Add code",
        "icon": "$(add)"
      },
      {
        "command": "svelte-companion.addElement",
        "title": "Add element",
        "icon": "$(add)"
      },
      {
        "command": "svelte-companion.addElementProperties",
        "title": "Add element's properties",
        "icon": "$(tools)"
      },
      {
        "command": "svelte-companion.deleteElement",
        "title": "Delete element",
        "icon": "$(trash)"
      },
      {
        "command": "svelte-companion.jumpToCode",
        "title": "Jump to code"
      },
      {
        "command": "svelte-companion.toggleSecondary",
        "title": "Toggle secondary nodes",
        "icon": "$(eye)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "svelteCompanion",
          "title": "Svelte companion",
          "icon": "$(package)"
        }
      ]
    },
    "views": {
      "svelteCompanion": [
        {
          "id": "svelteLayout",
          "name": "Svelte companion",
          "when": "resourceExtname == .svelte"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "svelte-companion.refreshLayoutTree",
          "when": "view == svelteLayout",
          "group": "navigation"
        },
        {
          "command": "svelte-companion.toggleSecondary",
          "when": "view == svelteLayout",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "svelte-companion.addElement",
          "when": "view == svelteLayout && viewItem == element",
          "group": "inline"
        },
        {
          "command": "svelte-companion.addElementProperties",
          "when": "view == svelteLayout",
          "group": "inline"
        },
        {
          "command": "svelte-companion.deleteElement",
          "when": "view == svelteLayout"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/estree": "^1.0.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "estree-walker": "^3.0.2",
    "glob": "^8.0.3",
    "magic-string": "^0.27.0",
    "mocha": "^10.1.0",
    "periscopic": "^3.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "svelte": "^3.55.1"
  }
}
